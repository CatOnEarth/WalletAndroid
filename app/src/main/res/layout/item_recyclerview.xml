<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayoutItemRecyclerViewMainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/height_item_recyclerView">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewItemRecyclerViewCardView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_very_tiny"
        android:layout_marginTop="@dimen/margin_tiny"
        android:layout_marginEnd="@dimen/margin_very_tiny"
        android:layout_weight="1"
        android:background="@color/background_main_color"
        app:cardBackgroundColor="@color/background_main_color"
        app:cardElevation="@dimen/card_elevation">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F3E16D">

            <TextView
                android:id="@+id/textViewItemRecyclerViewCategory"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_big" />

            <TextView
                android:id="@+id/textViewItemRecyclerViewDescription"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_more_middle" />

            <TextView
                android:id="@+id/textViewItemRecyclerViewValue"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_big" />
        </TableRow>
    </androidx.cardview.widget.CardView>

</LinearLayout>