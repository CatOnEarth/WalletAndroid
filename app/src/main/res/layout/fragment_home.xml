<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main_color"
    tools:context=".MainScreen.ui.home.HomeFragment">

    <TextView
        android:id="@+id/textViewHomeFragmentRevenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_tiny"
        android:text="@string/text_revenue"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_very_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/buttonHomeFragmentAddRevenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small"
        android:background="@color/transparent"
        android:src="@android:drawable/ic_input_add"
        app:layout_constraintStart_toEndOf="@+id/textViewHomeFragmentRevenue"
        app:layout_constraintTop_toTopOf="@+id/textViewHomeFragmentRevenue"
        android:contentDescription="@string/text_add" />

    <TableLayout
        android:id="@+id/tableLayoutHomeFragmentTableRevenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_tiny"
        android:layout_marginTop="@dimen/margin_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.251"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHomeFragmentRevenue">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_very_tiny">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_tiny"
                android:layout_weight="0.3"
                android:gravity="center|end"
                android:text="@string/text_currency_russian_ruble_with_colon"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_big" />

            <TextView
                android:id="@+id/textViewHomeFragmentRevenueDisplayRubles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_tiny"
                android:layout_weight="1"
                android:gravity="center|start"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_big" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewHomeFragmentRevenueDollars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_tiny"
                android:layout_weight="0.3"
                android:gravity="center|end"
                android:text="@string/text_currency_dollar_usa_with_colon"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_big" />

            <TextView
                android:id="@+id/textViewHomeFragmentRevenueDisplayDollars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_tiny"
                android:layout_weight="1"
                android:gravity="center|start"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_big" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewHomeFragmentRevenueEuro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="0.3"
                android:gravity="center|end"
                android:text="@string/text_currency_euro_with_colon"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_big" />

            <TextView
                android:id="@+id/textViewHomeFragmentRevenueDisplayEuro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_tiny"
                android:layout_weight="1"
                android:gravity="center|start"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_big" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewHomeFragmentRevenueTurkishLira"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_tiny"
                android:layout_weight="0.3"
                android:gravity="center|end"
                android:text="@string/text_currency_turkish_lira_with_colon"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_big" />

            <TextView
                android:id="@+id/textViewHomeFragmentRevenueDisplayLira"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_tiny"
                android:layout_weight="1"
                android:gravity="center|start"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_big" />
        </TableRow>

    </TableLayout>

    <View
        android:id="@+id/dividerHomeFragmentDividerRevenueExpenses"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toTopOf="@+id/textViewHomeFragmentExpenses"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayoutHomeFragmentTableRevenue"
        app:layout_constraintVertical_bias="0.086" />

    <TextView
        android:id="@+id/textViewHomeFragmentExpenses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:text="@string/text_expenses"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_very_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayoutHomeFragmentTableRevenue" />

    <ImageButton
        android:id="@+id/buttonHomeFragmentAddExpenses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small"
        android:background="@color/transparent"
        android:src="@android:drawable/ic_input_add"
        app:layout_constraintStart_toEndOf="@+id/textViewHomeFragmentExpenses"
        app:layout_constraintTop_toTopOf="@+id/textViewHomeFragmentExpenses"
        android:contentDescription="@string/text_add" />

    <TableLayout
        android:id="@+id/tableLayoutHomeFragmentExpenses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.281"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHomeFragmentExpenses">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/textViewHomeFragmentExpensesRubles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_tiny"
                android:layout_weight="0.3"
                android:gravity="center|end"
                android:text="@string/text_currency_russian_ruble_with_colon"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_big" />

            <TextView
                android:id="@+id/textViewHomeFragmentExpensesDisplayRubles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_tiny"
                android:layout_weight="1"
                android:gravity="center|start"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_big" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewHomeFragmentExpensesDollars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_tiny"
                android:layout_weight="0.3"
                android:gravity="center|end"
                android:text="@string/text_currency_dollar_usa_with_colon"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_big" />

            <TextView
                android:id="@+id/textViewHomeFragmentExpensesDisplayDollars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_tiny"
                android:layout_weight="1"
                android:gravity="center|start"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_big" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewHomeFragmentExpensesEuro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_tiny"
                android:layout_weight="0.3"
                android:gravity="center|end"
                android:text="@string/text_currency_euro_with_colon"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_big" />

            <TextView
                android:id="@+id/textViewHomeFragmentExpensesDisplayEuro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_tiny"
                android:layout_weight="1"
                android:gravity="center|start"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_big" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewHomeFragmentExpensesTurkishLira"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_tiny"
                android:layout_weight="0.3"
                android:gravity="center|end"
                android:text="@string/text_currency_turkish_lira_with_colon"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_big" />

            <TextView
                android:id="@+id/textViewHomeFragmentExpensesDisplayLira"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_tiny"
                android:layout_weight="1"
                android:gravity="center|start"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_big" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>