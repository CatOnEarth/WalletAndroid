<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main_color">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Укажите сумму"
        app:layout_constraintBottom_toTopOf="@+id/editTextNumberValueExchangeUp"
        app:layout_constraintStart_toStartOf="parent" />

    <com.snail.wallet.CustomViews.SyncEditText.SyncEditText
        android:id="@+id/editTextNumberValueExchangeUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerExchangeCurrencyUp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:minHeight="48dp"
        app:layout_constraintStart_toEndOf="@+id/editTextNumberValueExchangeUp"
        app:layout_constraintTop_toTopOf="@+id/editTextNumberValueExchangeUp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Укажите сумму"
        app:layout_constraintBottom_toTopOf="@+id/editTextNumberValueExchangeDown"
        app:layout_constraintStart_toStartOf="parent" />

    <com.snail.wallet.CustomViews.SyncEditText.SyncEditText
        android:id="@+id/editTextNumberValueExchangeDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumberValueExchangeUp" />

    <Spinner
        android:id="@+id/spinnerExchangeDown"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:minHeight="48dp"
        app:layout_constraintStart_toEndOf="@+id/editTextNumberValueExchangeDown"
        app:layout_constraintTop_toTopOf="@+id/editTextNumberValueExchangeDown" />

    <TableLayout
        android:id="@+id/tableLayoutExchangeValues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumberValueExchangeDown"
        app:tabMode="scrollable">

    </TableLayout>

    <Button
        android:id="@+id/buttonUpdateExchangeCalcCurrencyFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Обновить курс"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayoutExchangeValues" />

    <ImageButton
        android:id="@+id/imageButtonCountValueByExchangeRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:rotation="90"
        app:layout_constraintBottom_toTopOf="@+id/editTextNumberValueExchangeDown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumberValueExchangeUp"
        app:srcCompat="@android:drawable/ic_media_pause" />

</androidx.constraintlayout.widget.ConstraintLayout>